<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Statistiques - Administrateur</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
  <style>
    html,
    body {
      height: 100%;
      margin: 0;
      padding: 0;
    }
    .wrapper {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      margin-top: 80px;
    }
    .content {
      flex: 1;
      padding: 2rem;
      background-color: #f5f5f5;
    }
    footer {
      background-color: #1E3A5F;
      color: #fff;
      text-align: center;
      padding: 1rem;
    }
    .navbar-brand {
      font-weight: bold;
      font-size: 1.5rem;
    }
    .nav-link.active {
      background-color: #1E3A5F;
      border-radius: 4px;
    }
    /* Exemples de sur-stylisation des titres de carte */
    .card-header {
      font-weight: bold;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow">
    <div class="container">
      <a class="navbar-brand" href="#">SangVital</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#adminNavbar"
        aria-controls="adminNavbar"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="adminNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/admin/">Accueil</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/ges_utilisateurs">Gestion Utilisateurs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/ges_dons">Gestion Dons</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/admin/statistiques">Statistiques</a>
          </li>
          <li class="nav-item">
            <a class="nav-link btn btn-outline-light ms-2" href="/">Déconnexion</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Contenu principal -->
  <div class="wrapper">
    <div class="content animate__animated animate__fadeInUp">
      <h2 class="mb-4">Statistiques</h2>
      <p class="mb-4">
        Voici un aperçu global de l'activité sur la plateforme.
      </p>

      <!-- Disposition en deux colonnes : Dons (col-md-6) et Utilisateurs (col-md-6) -->
      <div class="row">
        <!-- Bloc Dons -->
        <div class="col-md-6 mb-4">
          <div class="card shadow">
            <div class="card-header bg-primary text-white">
              Dons
            </div>
            <div class="card-body">
              <p>
                <strong>Nombre total de dons :</strong>
                <span class="badge bg-secondary"><%= totalDons %></span>
              </p>
              <p>
                <strong>Volume total collecté :</strong>
                <span class="badge bg-success"><%= totalVolume %> ml</span>
              </p>

              <h5 class="mt-4">Répartition par Type</h5>
              <ul class="list-group list-group-flush">
                <% typeRepartition.forEach(item => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= item.type_don %>
                    <span class="badge bg-info"><%= item.nb %> dons</span>
                  </li>
                <% }) %>
              </ul>

              <h5 class="mt-4">Répartition par État</h5>
              <ul class="list-group list-group-flush">
                <% etatRepartition.forEach(item => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= item.etat %>
                    <span class="badge bg-warning text-dark"><%= item.nb %> dons</span>
                  </li>
                <% }) %>
              </ul>
            </div>
          </div>
        </div>

        <!-- Bloc Utilisateurs -->
        <div class="col-md-6 mb-4">
          <div class="card shadow">
            <div class="card-header bg-success text-white">
              Utilisateurs
            </div>
            <div class="card-body">
              <p>
                <strong>Nombre total d'utilisateurs :</strong>
                <span class="badge bg-secondary"><%= totalUsers %></span>
              </p>
              <p>
                <strong>Nouveaux utilisateurs (30 derniers jours) :</strong>
                <span class="badge bg-info"><%= newUsers %></span>
              </p>

              <h5 class="mt-4">Répartition par Rôle</h5>
              <ul class="list-group list-group-flush">
                <% usersByRole.forEach(item => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= item.role %>
                    <span class="badge bg-dark"><%= item.nb %></span>
                  </li>
                <% }) %>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Nouveaux graphiques -->
      <div class="row">
        <!-- Graphique Répartition par Type de Don -->
        <div class="col-md-6 mb-4">
          <div class="card shadow">
            <div class="card-header bg-secondary text-white">
              Graphique : Répartition par Type de Don
            </div>
            <div class="card-body">
              <canvas id="donTypeChart"></canvas>
            </div>
          </div>
        </div>
        <!-- Graphique Répartition par État -->
        <div class="col-md-6 mb-4">
          <div class="card shadow">
            <div class="card-header bg-secondary text-white">
              Graphique : Répartition par État
            </div>
            <div class="card-body">
              <canvas id="donEtatChart"></canvas>
            </div>
          </div>
        </div>
      </div>

      <!-- Bloc Top 10 Donneurs, sur toute la largeur -->
      <div class="card shadow mb-4">
        <div class="card-header bg-info text-white">
          Top 10 Donneurs
        </div>
        <div class="card-body">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Nom d'utilisateur</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Nombre de dons</th>
              </tr>
            </thead>
            <tbody>
              <% topDonors.forEach(donor => { %>
                <tr>
                  <td><%= donor.username %></td>
                  <td><%= donor.nom %></td>
                  <td><%= donor.prenom %></td>
                  <td><%= donor.nb_dons %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <footer>
      <p>&copy; 2025 SangVital. Tous droits réservés.</p>
    </footer>
  </div>

  <!-- Inclusion de Bootstrap JS -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
  ></script>
  <!-- Inclusion de Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // Graphique Répartition par Type de Don
    const typeLabels = <%- JSON.stringify(typeRepartition.map(item => item.type_don)) %>;
    const typeData = <%- JSON.stringify(typeRepartition.map(item => item.nb)) %>;

    const ctxType = document.getElementById('donTypeChart').getContext('2d');
    const donTypeChart = new Chart(ctxType, {
      type: 'bar',
      data: {
        labels: typeLabels,
        datasets: [{
          label: 'Nombre de Dons',
          data: typeData,
          backgroundColor: 'rgba(54, 162, 235, 0.5)',
          borderColor: 'rgba(54, 162, 235, 1)',
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });

    // Graphique Répartition par État
    const etatLabels = <%- JSON.stringify(etatRepartition.map(item => item.etat)) %>;
    const etatData = <%- JSON.stringify(etatRepartition.map(item => item.nb)) %>;

    const ctxEtat = document.getElementById('donEtatChart').getContext('2d');
    const donEtatChart = new Chart(ctxEtat, {
      type: 'pie',
      data: {
        labels: etatLabels,
        datasets: [{
          label: 'Nombre de Dons',
          data: etatData,
          backgroundColor: [
            'rgba(255, 99, 132, 0.5)',
            'rgba(54, 162, 235, 0.5)',
            'rgba(255, 206, 86, 0.5)'
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'top'
          }
        }
      }
    });
  </script>
</body>
</html>
