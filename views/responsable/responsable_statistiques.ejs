<body class="d-flex flex-column min-vh-100">
    <!-- Barre de navigation en haut -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow">
        <div class="container">
            <a class="navbar-brand" href="#">SangVital</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#respNavbar"
                aria-controls="respNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="respNavbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/responsable/">Accueil</a></li>
                    <li class="nav-item"><a class="nav-link" href="/responsable/stock">Suivi Stocks</a></li>
