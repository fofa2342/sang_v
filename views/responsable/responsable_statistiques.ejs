    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard Responsable - SangVital</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f5f5f5;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .content-container {
            margin-top: 80px;
            padding: 2rem;
        }

        footer {
            background-color: #1E3A5F;
            color: #fff;
            text-align: center;
            padding: 1rem;
            margin-top: 2rem;
        }

        main {
            margin-top: 80px;
        }
        .nav-link.active { background-color: #1E3A5F; border-radius: 4px; }

    </style>
